; Meta Options
; These are passed as variables to the global template context
[meta]
title:		Configuration Test
author:		Mark Rickerby
website:	http://yarrowdoc.org

# Output options
# These are passed to the output generator and converter
[output]
templates:	/path/to/templates
converter:	Twig

# More options to test variable conversion
[options]
array:		one,two,three
integer:	1
truthy:		On
falsy:		Off